<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lpl.mybatis.mapper.UserMapper">
    <select id="selectUser" resultType="com.lpl.mybatis.domain.User">
        select `id`, `name`, `pwd`
        from `user`
    </select>
    <select id="selectById" resultType="com.lpl.mybatis.domain.User">
        select `id`, `name`, `pwd`
        from `user`
        where `id` = #{id}
    </select>
    <select id="selectByNameAndPwd" resultType="com.lpl.mybatis.domain.User">
        select *
        from user
        where `name` = #{name} and `pwd` = #{pwd}
    </select>
    <select id="selectByNameAndPwd2" resultType="com.lpl.mybatis.domain.User" parameterType="map">
        select *
        from user
        where `name` = #{name} and `pwd` = #{pwd}
    </select>
</mapper>