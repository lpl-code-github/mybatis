<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lpl.mybatis.mapper.UserMapper">
    <insert id="addUser">
        insert into `user` (`id`, `name`, `pwd`)
        values (#{id}, #{name}, #{pwd})
    </insert>
    <update id="updateUser">
        update user
        set name=#{name},
            pwd=#{pwd}
        where id = #{id}
    </update>
    <delete id="deleteUser">
        delete
        from `user`
        where `id` = #{id}
    </delete>
    <select id="selectUser" resultType="User">
        select `id`, `name`, `pwd`
        from `user`
    </select>
    <select id="selectById" resultType="User">
        select `id`, `name`, `pwd`
        from `user`
        where `id` = #{id}
    </select>
    <select id="selectByNameAndPwd" resultType="User">
        select *
        from user
        where `name` = #{name}
          and `pwd` = #{pwd}
    </select>
    <select id="selectByNameAndPwd2" resultType="User" parameterType="map">
        select *
        from user
        where `name` = #{name}
          and `pwd` = #{pwd}
    </select>
    <select id="selectLike" resultType="User">
        select * from `user` where name like #{value}
    </select>
</mapper>